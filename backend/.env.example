# Environment
NODE_ENV=production
PORT=8080
DATABASE_URL=postgres://user:pass@host:5432/balcon

# Frontend Origins (comma separated, REQUIRED in production)
FRONTEND_ORIGINS=https://app.example.com,https://www.example.com

# Auth Secrets (rotate regularly)
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
TOKEN_EXPIRY_MINUTES=15
REFRESH_TOKEN_RETENTION_DAYS=30
REFRESH_TOKEN_CLEANUP_INTERVAL_MS=3600000

# Legacy / backward compatibility (if code paths still reference)
# JWT_SECRET=change_me
# JWT_EXPIRES_IN=7d

# Logging & Security
LOG_LEVEL=info
ENFORCE_HTTPS=true
ENABLE_TEST_ROUTES=false

# Metrics & Diagnostics
ADV_METRICS_ENABLED=true
DB_SLOW_QUERY_THRESHOLD_MS=500
DB_QUERY_LOGGING=false
DIAG_ENDPOINTS_ENABLED=false
METRICS_AUTH_TOKEN=optional_metrics_token

# Optional CSP additions
CSP_EXTRA_CONNECT=

# Rate Limiting overrides (examples)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=1000

# Storage
STORAGE_DRIVER=local

# Notifications / Email (examples)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@balconbuilders.com
ADMIN_EMAIL=admin@balconbuilders.com

# Redis / Caching (if used)
REDIS_URL=

# Cloud / Object Storage
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_STORAGE_BUCKET=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Upload constraints
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760
MAX_FILES=10
