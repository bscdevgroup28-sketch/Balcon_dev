              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/api/analytics/anomalies": {
      "get": {
        "summary": "Detect KPI anomalies (rolling z-score)",
