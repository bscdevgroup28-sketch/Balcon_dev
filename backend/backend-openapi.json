              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/analytics/trends.csv": {
      "get": {
        "summary": "Export KPI trends as CSV",
        "parameters": [
          {
            "name": "range",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "30d",
                "90d",
                "365d"
              ],
              "default": "30d"
            },
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "CSV",
            "content": {
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/api/analytics/distribution/materials.csv": {
      "get": {
        "summary": "Export material distribution CSV",
        "parameters": [
          {
            "name": "field",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "category",
                "status"
              ],
              "default": "category"
            },
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "CSV",
